{
  "manifest_version": 2,
  "name": "pomodoro",
  "description": "Pomodoro widget to help you focus",
  "version": "0.0.1",
  "author": "rfigueroa",
  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "options_ui": {
    "page": "dashboard.html",
    "chrome_style": true
  },
  "background": {
    "scripts": ["js/background.js"]
  }
}
